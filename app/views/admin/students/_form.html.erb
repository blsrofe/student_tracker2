<div class="container">
  <div class="card form-styles" style="width: 20rem;">
    <div class="card-block">
      <h2 class="header-font text-center card-title">Your Profile</h2>
      <%= form_for([:admin, @student]) do |f| %>
        <%= f.select :grade_level, options_for_select(["K", "1", "2", "3", "4", "5"]) %></br>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %></br>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %></br>
        <%= f.label :notes %>
        <%= f.text_area :notes %></br>
        <%= f.label :email %>
        <%= f.text_field :email %></br>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
