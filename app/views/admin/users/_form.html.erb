<div class="container">
  <div class="card form-styles" style="width: 20rem;">
    <div class="card-block">
      <h2 class="header-font text-center card-title">Create User Account</h2>
      <%= form_for([:admin, @user]) do |f| %>
        <%= f.select(:role, User.roles.keys.map {|role| [role.titleize,role]}) %></br>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %></br>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %></br>
        <%= f.label :email %>
        <%= f.text_field :email %></br>
        <%= f.hidden_field :password, value: @password %></br>
        <%= f.submit "Create Account" %>
      <% end %>
    </div>
  </div>
</div>
