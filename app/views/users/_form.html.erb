<div class="container">
  <div class="card form-styles" style="width: 20rem;">
    <div class="card-block">
      <h2 class="header-font card-title">Edit your profile!</h2>
      <%= form_for(@user) do |f| %>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %></br>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %></br>
        <%= f.label :email %>
        <%= f.text_field :email %></br>
        <%= f.label :password %>
        <%= f.text_field :password %></br>
        <%= f.submit "Update Account" %>
      <% end %>
    </div>
  </div>
</div>
