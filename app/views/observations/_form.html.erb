<%= form_for [@observation] do |f| %>
  <%= f.label :student_id %>
  <%= select_tag :student_id, options_for_select(current_user.students) %></br>
  <%= f.label :date %>
  <%= f.date_field :date %></br>
  <%= f.label :subject %>
  <%= select_tag :subject, options_for_select(current_user.klass_names) %></br>
  <%= radio_button_tag :ob_type, "needs improvement" %>
  <%= label_tag :ob_type, "Needs improvement" %>
  <%= radio_button_tag :ob_type, "neutral" %>
  <%= label_tag :ob_type, "Neutral" %>
  <%= radio_button_tag :ob_type, "strength"%>
  <%= label_tag :ob_type, "Strength" %></br>
  <%= check_box_tag :parent_viewable %>
  <%= label_tag :parent_viewable, "Check to make viewable to parents" %></br>
  <%= f.label :comment %>
  <%= f.text_area :comment %></br>
  <%= hidden_field_tag :user_id, current_user.id %>
  <%= f.submit %>
<% end %>
